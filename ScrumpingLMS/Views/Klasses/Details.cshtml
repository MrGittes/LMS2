@{
    var students = (List<ScrumpingLMS.Models.ApplicationUser>)ViewBag.LMSStudents;
}

    <div class="row">
        <div class="col-md-2">
            <b>Förnamn</b>
        </div>
        <div class="col-md-2">
            <b>Efternamn</b>
        </div>
        <div class="col-md-2">
            <b>E-post</b>
        </div>
    </div>

    @foreach (var student in students)
    {
        <div class="row">
            <div class="col-md-2">
                @Html.DisplayFor(modelItem => student.FirstName)
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(modelItem => student.LastName)
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(modelItem => student.Email)
            </div>
            <div class="col-md-2">
                @Html.ActionLink("Edit", "Edit", new { id = student.Id }) |
                @Html.ActionLink("Details", "Details", new { id = student.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = student.Id })
            </div>
        </div>
    }
