@model IEnumerable<ScrumpingLMS.Models.Klass>

@{
    ViewBag.Title = "Index för klass";
}

<h2>Lista på samtliga klasser</h2>

<p>
    @Html.ActionLink("Lägg till en ny klass", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfDays)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr class="row">
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @item.StartDate.ToShortDateString()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfDays)
        </td>
        <td>
            @if (User.IsInRole("lärare"))
                 {
                     @Html.ActionLink("Edit", "Edit", new { id=item.Id }) 
                 }
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @if (User.IsInRole("lärare"))
                 {
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                 }
        </td>
    </tr>
}
        

</table>
