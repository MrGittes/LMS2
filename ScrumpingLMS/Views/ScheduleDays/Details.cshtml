@model ScrumpingLMS.Models.ScheduleDay

@{
    ViewBag.Title = "Details";
}

<h2>Detaljer för schema</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <!--@Html.DisplayNameFor(model => model.Klass.Name)-->
            Klass
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Klass.Name)
        </dd>

        <dt>
            <!--@Html.DisplayNameFor(model => model.DayNumber)-->
            Dag
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DayNumber)
        </dd>

        <dt>
            <!--@Html.DisplayNameFor(model => model.Details)-->
            Detaljer
        </dt>

        <dd>
            @{var text = Model.Details;}
            @Html.Raw(@text)
        </dd>

    </dl>
    @using (Html.BeginForm("Upload", "ScheduleDays", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div>
            <div>
                <input type="file" name="UploadTheFile" value="UploadTheFile" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>



    }
</div>
<p>
    @if (User.IsInRole("admin"))
    {
    @Html.ActionLink("Ändra", "Edit", new { id = Model.Id }) 
    }
     @Html.ActionLink("Tillbaka till listan", "Index")
</p>
