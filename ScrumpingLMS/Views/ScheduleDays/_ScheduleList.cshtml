@model IEnumerable<ScrumpingLMS.Models.ScheduleDay>

<div id="KlassList">
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-1">
                @Html.DisplayFor(modelItem => item.DayNumber)
            </div>
            <div class="col-md-3">
               @item.WorkingDate.ToShortDateString()
            </div>
            <div class="col-md-6">
                @{var text = item.Details;}
                @Html.Raw(@text) &nbsp;
            </div>
            <div class="col-md-2">

                 @if (User.IsInRole("lärare"))
                 {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) 
                 }
                 |

                @Html.ActionLink("Details", "Details", new { id = item.Id }) |

                @if (User.IsInRole("lärare"))
                 {
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
            </div>
        </div>
    }
</div>