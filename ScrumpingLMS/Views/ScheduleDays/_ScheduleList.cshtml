@model IEnumerable<ScrumpingLMS.Models.ScheduleDay>

<div id="KlassList">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            @Html.DisplayFor(modelItem => item.Klass.Name)

        </div>
        <div class="col-md-3">
            @Html.DisplayFor(modelItem => item.DayNumber)
        </div>
        <div class="col-md-3">
            @{var text = item.Details;}
            @Html.Raw(@text) &nbsp;
        </div>
        <div class="col-md-3">
            @if (User.IsInRole("admin"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            } |

            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @if (User.IsInRole("admin"))
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            }
        </div>
    }
</div>